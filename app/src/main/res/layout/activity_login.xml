<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative2"
            android:padding="10dp"
            android:gravity="center"
            >
        <EditText
            android:hint="@string/email"
            android:id="@+id/et_userName"
            android:inputType="textEmailAddress"
            android:maxLength="35"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#f5f5f5"
            android:drawableLeft="@drawable/user"
            android:padding="12dp"
            android:maxLines="1"
            android:drawablePadding="30dp"
            />

        <EditText
            android:hint="Password"
            android:id="@+id/et_password"
            android:inputType="textPassword"
            android:textColor="#F2FFFA"
            android:layout_below="@+id/et_userName"
            android:maxLength="35"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:maxLines="1"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="35dp"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:background="#f5f5f5"/>

        <Button
            android:textColor="@color/alltext"
            android:id="@+id/login"
            android:layout_below="@+id/et_password"
            android:text="LOGIN"
            android:maxLength="35"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:maxLines="1"
            android:drawablePadding="35dp"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="#00a875"/>

            <TextView
                android:id="@+id/textor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textColor="#f5f5f5"
                android:layout_below="@+id/login"
                android:layout_margin="15dp"
                android:layout_centerHorizontal="true"/>
            <View
                android:layout_marginTop="25dp"

                android:layout_below="@id/login"
                android:layout_toStartOf="@+id/textor"
                android:layout_width="140dp"
                android:layout_marginLeft="35dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <View
                android:layout_marginTop="25dp"

                android:layout_below="@id/login"
                android:layout_toRightOf="@+id/textor"
                android:layout_width="140dp"
                android:layout_marginRight="35dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/bt_facebook"
            android:layout_below="@id/textor"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingRight="13dp"
            android:paddingLeft="13dp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"/>

            <com.google.android.gms.common.SignInButton
            android:id="@+id/bt_google"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_below="@id/bt_facebook"
            />
        </RelativeLayout>

</RelativeLayout>
