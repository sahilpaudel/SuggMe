<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sahilpaudel.app.suggme.RegisterActivity"
    android:background="@drawable/main_background">

    <EditText
        android:hint="First Name"
        android:textStyle="italic"
        android:id="@+id/et_FirstName"
        android:inputType="text"
        android:maxLength="35"
        android:textColor="#f5f5f5"
        android:textColorHint="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/user"
        android:padding="12dp"
        android:maxLines="1"
        android:layout_marginTop="100dp"
        android:drawablePadding="30dp"/>
    <EditText
        android:hint="Last Name"
        android:textStyle="italic"
        android:id="@+id/et_LastName"
        android:inputType="text"
        android:maxLength="35"
        android:textColor="#f5f5f5"
        android:textColorHint="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/user"
        android:padding="12dp"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:layout_below="@id/et_FirstName"
        android:drawablePadding="30dp"/>
    <EditText
        android:hint="Password"
        android:textStyle="italic"
        android:id="@+id/et_Password"
        android:inputType="textPassword"
        android:maxLength="35"
        android:textColor="#f5f5f5"
        android:textColorHint="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/password"
        android:padding="12dp"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:layout_below="@id/et_LastName"
        android:drawablePadding="30dp"/>
    <EditText
        android:hint="@string/email"
        android:id="@+id/et_Email"
        android:inputType="textEmailAddress"
        android:maxLength="35"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#f5f5f5"
        android:textColorHint="#f5f5f5"
        android:drawableLeft="@drawable/mail"
        android:padding="12dp"
        android:textStyle="italic"
        android:maxLines="1"
        android:layout_below="@id/et_Password"
        android:layout_marginTop="10dp"
        android:drawablePadding="30dp"/>
    <EditText
        android:hint="Gender F/M/O"
        android:id="@+id/et_Gender"
        android:inputType="text"
        android:maxLength="1"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#f5f5f5"
        android:textColorHint="#f5f5f5"
        android:drawableLeft="@drawable/mail"
        android:padding="12dp"
        android:maxLines="1"
        android:layout_below="@id/et_Email"
        android:layout_marginTop="10dp"
        android:drawablePadding="30dp" />

    <Button
        android:textColor="@color/alltext"
        android:id="@+id/bt_Register"
        android:layout_below="@+id/et_Gender"
        android:text="SIGN UP"
        android:maxLength="35"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:maxLines="1"
        android:drawablePadding="35dp"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:background="#00a875" />

</RelativeLayout>
