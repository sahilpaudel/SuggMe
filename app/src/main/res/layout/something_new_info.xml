<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nickname"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"/>

    <LinearLayout
        android:layout_below="@+id/nickname"
        android:id="@+id/interestsPrimary"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/something_new_content"
            android:textColor="@color/alltext"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:background="@drawable/roundedfields"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/interestsPrimary"
        android:id="@+id/interestsSecondary"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/interest_4"
            android:textColor="@color/alltext"
            android:textSize="15sp"
            android:text="YES"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:gravity="center_horizontal"
            android:background="@drawable/roundedfields"
            android:layout_height="wrap_content"
            android:layout_width="50dp" />

        <TextView
            android:id="@+id/interest_5"
            android:textColor="@color/alltext"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:text="NO"
            android:gravity="center_horizontal"
            android:background="@drawable/roundedfields"
            android:layout_height="wrap_content"
            android:layout_width="50dp" />
    </LinearLayout>

</RelativeLayout>