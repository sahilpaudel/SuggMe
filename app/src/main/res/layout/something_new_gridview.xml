<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:padding="5dp"
    android:background="@drawable/something_new_back_new">

    <TextView
        android:id="@+id/tv_NewTitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:text="Cheapest Restaurant"
        android:textSize="18dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/iv_NewImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tv_NewTitle"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/home"
        android:contentDescription="NewImage" />

    <TextView
        android:id="@+id/tv_NewLandMark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:maxLength="50"
        android:textStyle="bold"
        android:layout_below="@id/iv_NewImage"
        android:textSize="16dp"
        android:gravity="center_horizontal"
        android:text="Sarojini Market, New Delhi"/>
</RelativeLayout>